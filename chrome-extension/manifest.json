{
  "manifest_version": 3,
  "name": "RSVP Speed Reader",
  "version": "1.0.0",
  "description": "Speed read any selected text with RSVP (Rapid Serial Visual Presentation)",
  "permissions": ["activeTab", "storage", "contextMenus"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "commands": {
    "toggle-reader": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Toggle RSVP reader with selected text"
    },
    "toggle-play": {
      "suggested_key": {
        "default": "Alt+Space"
      },
      "description": "Play/Pause reading"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
